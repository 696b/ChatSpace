.wrapper
  .left 
    .left__top 
      %p.name  
        = current_user.name
      %ul.menu
        %li.cog
          = link_to 'groups/new' do
            %i.fa.fa-edit{class:'icon'}
        %li.edit
          = link_to 'users/edit' do
            %i.fa.fa-cog{class:'icon'}
    .left__body
      = render partial: "groups/group"  
  .main
    .main
    .main__top
      .group-top group
      .member Member : name name
      %a{href:"groups/edit"}
        %a.button{href: "groups/edit"}Edit
    .main__body
      = render partial: "shared/message"
    .main__bottom
      .form-box
        .form-and-icon
          %input.whitebox{id: "message", name:  "message",  type: "text" , placeholder: "type a message"}
          %label.test
            %i.far.fa-image
            %input.image-label-input{type: "file",id: "image_input"}
        .mask-send  
          %input.send{type: "submit",value:"Send"}/


 
